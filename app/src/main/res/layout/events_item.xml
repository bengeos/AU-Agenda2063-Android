<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:id="@+id/newsitemholder"
    style="@style/RippleStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/newsimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/material_grey_300"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"

        android:layout_centerHorizontal="true">

        <com.ytc.agendaafrica.fonts.RobotoTextView
            android:id="@+id/newstitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="left"
            android:text="Monument walk tour"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:typeface="robotoThin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp">

            <com.ytc.agendaafrica.fonts.RobotoTextView
                android:id="@+id/newsdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:layout_gravity="left"
                android:text="@string/lorem_ipsum_long"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:typeface="robotoThin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="3dp">
            <com.ytc.agendaafrica.fonts.RobotoTextView
                android:id="@+id/newsdatatime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:30min walking tour"

                android:layout_gravity="left"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                app:typeface="robotoThin" />

                <com.ytc.agendaafrica.fonts.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" |  "

                    android:layout_gravity="left"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:typeface="robotoThin" />
                <com.ytc.agendaafrica.fonts.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" by : "

                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:typeface="robotoThin" />

                <com.ytc.agendaafrica.fonts.RobotoTextView
                    android:id="@+id/newsauthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="author name"

                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:typeface="robotoThin" />
                </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <com.ytc.agendaafrica.fonts.RobotoTextView
        android:id="@+id/newslocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:paddingLeft="10dp"
        android:background="@color/colorPrimary"
        android:gravity="right"
        android:paddingRight="5dp"
        android:text="3:30min walking tour"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:typeface="robotoThin" />

</RelativeLayout>